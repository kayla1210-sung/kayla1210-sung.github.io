<body>

  <h1>ğŸ® åæ‡‰åŠ›æ¸¬è©¦ï¼šåˆ¥æŒ‰éŒ¯ï¼</h1>

  <div id="info">
    åˆ†æ•¸ï¼š<span id="score">0</span>ã€€
    ç”Ÿå‘½ï¼š<span id="life">3</span>
  </div>

  <div id="game">
    <div id="box"></div>
    <button onclick="startGame()">é–‹å§‹éŠæˆ²</button>
  </div>

  <script>
    const box = document.getElementById("box");
    const scoreText = document.getElementById("score");
    const lifeText = document.getElementById("life");

    let score = 0;
    let life = 3;
    let state = "";
    let canClick = false;
    let speed = 1200;

    function startGame() {
      score = 0;
      life = 3;
      speed = 1200;
      updateUI();
      nextRound();
    }

    function nextRound() {
      if (life <= 0) {
        alert("éŠæˆ²çµæŸï¼ä½ çš„åˆ†æ•¸æ˜¯ï¼š" + score);
        box.style.display = "none";
        return;
      }

      box.style.display = "none";
      canClick = false;

      setTimeout(() => {
        const rand = Math.random();
        box.className = "";

        if (rand < 0.4) {
          state = "green";
          box.classList.add("green");
          canClick = true;
        } else if (rand < 0.7) {
          state = "red";
          box.classList.add("red");
          canClick = false;
        } else {
          state = "blue";
          box.classList.add("blue");
          canClick = false;
          setTimeout(() => canClick = true, 1000);
        }

        box.style.display = "block";

        setTimeout(() => {
          if (canClick) {
            life--;
            updateUI();
          }
          nextRound();
        }, speed);

      }, 400);
    }

    box.addEventListener("click", () => {
      if (state === "green" && canClick) {
        score++;
      } else if (state === "blue" && canClick) {
        score += 2;
      } else {
        life--;
      }

      speed = Math.max(400, speed - 30);
      updateUI();
      nextRound();
    });

    function updateUI() {
      scoreText.textContent = score;
      lifeText.textContent = life;
    }
  </script>

