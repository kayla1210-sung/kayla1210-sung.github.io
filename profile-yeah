  <script>
    // Basic interactivity
    const intro = document.getElementById('intro');
    const startBtn = document.getElementById('startBtn');
    const demoBtn = document.getElementById('demoBtn');
    const quests = document.getElementById('quests');
    const works = document.getElementById('works');
    const modal = document.getElementById('modal');
    const modalTitle = document.getElementById('modalTitle');
    const modalBody = document.getElementById('modalBody');
    const closeModal = document.getElementById('closeModal');
    const playerName = document.getElementById('playerName');
    const bioName = document.getElementById('bioName');
    const charEmoji = document.getElementById('charEmoji');
    const editBtn = document.getElementById('editBtn');
    const downloadBtn = document.getElementById('downloadBtn');

    // Helper: simple prompt-based customization
    editBtn.addEventListener('click', ()=>{
      const name = prompt('è¼¸å…¥ä½ çš„åå­—', playerName.textContent) || playerName.textContent;
      playerName.textContent = name; bioName.textContent = name;
      const emoji = prompt('è¼¸å…¥ä¸€å€‹è¡¨æƒ…ç¬¦è™Ÿä½œç‚ºè§’è‰²', 'ğŸ›¡ï¸') || 'ğŸ›¡ï¸';
      charEmoji.textContent = emoji;
    });

    downloadBtn.addEventListener('click', ()=>{
      const cv = `å±¥æ­· - ${playerName.textContent}\nè·æ¥­: å‰ç«¯é¨å£«\næŠ€èƒ½: HTML, CSS, JS`;
      const blob = new Blob([cv], {type:'text/plain'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url; a.download = `${playerName.textContent}_CV.txt`;
      a.click(); URL.revokeObjectURL(url);
    });

    // Start button
    startBtn.addEventListener('click', ()=>{
      intro.style.display = 'none';
      // little reveal animation
      document.querySelectorAll('.panel').forEach((p,i)=>{p.style.transform='translateY(8px)';p.style.transition='all .6s ease '+(i*0.05)+'s';p.style.opacity=1;});
    });
    demoBtn.addEventListener('click', ()=>{
      // demo: close intro and auto-complete quest
      startBtn.click();
      setTimeout(()=>{document.querySelector('[data-id="1"]').click()},700);
    });

    // Quests click
    quests.addEventListener('click', e=>{
      const q = e.target.closest('.quest');
      if(!q) return;
      const id = q.dataset.id;
      if(q.classList.contains('locked')){
        showModal('ä»»å‹™è¢«é–ä½', 'é€™å€‹ä»»å‹™æ˜¯éš±è—ä»»å‹™ï¼Œéœ€è¦å…ˆå®Œæˆå°éŠæˆ²æˆ–å…¶ä»–æ¢ä»¶ã€‚');
        return;
      }
      // simulate completing quest
      showModal('ä»»å‹™è©³æƒ…', `ä½ æŸ¥çœ‹äº†ï¼š${q.textContent.trim()}\n\nå®Œæˆå¾Œæœƒç²å¾—çå‹µï¼`);
      // reward animation: increase EXP
      if(!q.classList.contains('done')){
        q.classList.add('done');
        q.style.opacity = 0.7;
        gainXP(80);
      }
    });

    // Works click -> modal
    works.addEventListener('click', e=>{
      const w = e.target.closest('.work'); if(!w) return;
      showModal(w.dataset.title, w.dataset.desc + '\n\n(å¯åœ¨é€™è£¡æ”¾ä½œå“æˆªåœ–ã€é€£çµèˆ‡èªªæ˜)');
    });

    function showModal(title, body){
      modalTitle.textContent = title; modalBody.textContent = body; modal.style.display = 'flex';
    }
    closeModal.addEventListener('click', ()=>modal.style.display='none');
    modal.addEventListener('click', e=>{ if(e.target===modal) modal.style.display='none' });

    // XP system (simple)
    let XP = 230; let Level = 5;
    const expText = document.getElementById('expText');
    function gainXP(n){
      XP += n; updateExp(); flashAccent();
    }
    function updateExp(){
      // level up every 300 XP
      while(XP >= 300){ XP -= 300; Level++; }
      expText.textContent = `Lv. ${Level} Â· ${XP} XP`;
    }
    function flashAccent(){
      document.documentElement.style.setProperty('--accent','#f97316');
      setTimeout(()=>document.documentElement.style.setProperty('--accent','#7c3aed'),400);
    }

    // small keyboard easter egg: press 'k' to toggle hidden quest
    window.addEventListener('keydown', e=>{
      if(e.key.toLowerCase()==='k'){
        const q3 = document.querySelector('[data-id="3"]');
        if(q3.classList.contains('locked')){ q3.classList.remove('locked'); showModal('å¯†ç¢¼è§£é™¤','ä½ è§£é–äº†éš±è—ä»»å‹™ï¼'); }
        else{ q3.classList.add('locked'); showModal('å·²é–å®š','å·²é‡æ–°é–å®šä»»å‹™ã€‚'); }
      }
    });

    // Small: show intro automatically if first time
    if(!localStorage.getItem('seenIntro')){ localStorage.setItem('seenIntro','1'); }

    // Accessibility: focus trap for modal (simple)
    document.addEventListener('focusin', e=>{
      if(modal.style.display==='flex' && !modal.contains(e.target)) closeModal.focus();
    });

    // Init
    updateExp();
  </script>
